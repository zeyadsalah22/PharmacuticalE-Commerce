@model PharmacuticalE_Commerce.Models.Cart

<h2>Your Active Cart</h2>

@if (Model.CartItems.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>
                        <!-- Button to remove item from cart -->
                        <form asp-action="RemoveCartItem" method="post">
                            <input type="hidden" name="cartId" value="@Model.CartId" />
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Form to add a new item to the cart -->
    <form asp-action="AddCartItem" method="post">
        <div class="form-group">
            <label for="productId">Product</label>
            <input type="number" name="productId" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="quantity">Quantity</label>
            <input type="number" name="quantity" class="form-control" required />
        </div>
        <input type="hidden" name="cartId" value="@Model.CartId" />
        <button type="submit" class="btn btn-primary">Add to Cart</button>
    </form>
}
else
{
    <p>No items in your cart.</p>

    <!-- Form to add a new item to an empty cart -->
    <form asp-action="AddCartItem" method="post">
        <div class="form-group">
            <label for="productId">Product</label>
            <input type="number" name="productId" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="quantity">Quantity</label>
            <input type="number" name="quantity" class="form-control" required />
        </div>
        <input type="hidden" name="cartId" value="@Model.CartId" />
        <button type="submit" class="btn btn-primary">Add to Cart</button>
    </form>
}
