@model PharmacuticalE_Commerce.Models.Shift

@{
    ViewBag.PageTitle = "Shifts";
    ViewBag.CardTitle = $"Edit {Model.FromTime} Shift";
    ViewData["Title"] = "ShiftEdit";
    Layout = "~/Views/Shared/_StaffManagementLayout.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="ShiftEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShiftId" />
            <div class="form-group">
                <label asp-for="FromTime" class="control-label"></label>
                <input type="time" asp-for="FromTime" class="form-control" />
                <span asp-validation-for="FromTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToTime" class="control-label"></label>
                <input type="time" asp-for="ToTime" class="form-control" />
                <span asp-validation-for="ToTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />&nbsp;&nbsp;&nbsp;
                <a asp-action="Shifts" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
