@model PharmacuticalE_Commerce.Models.Shift

@{
    ViewBag.PageTitle = "Shifts";
    ViewBag.CardTitle = "Shift Create";
    ViewData["Title"] = "ShiftCreate";
    Layout = "~/Views/Shared/_StaffManagementLayout.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShiftCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FromTime" class="control-label"></label>
                <input asp-for="FromTime" class="form-control" />
                <span asp-validation-for="FromTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToTime" class="control-label"></label>
                <input asp-for="ToTime" class="form-control" />
                <span asp-validation-for="ToTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Shifts" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
