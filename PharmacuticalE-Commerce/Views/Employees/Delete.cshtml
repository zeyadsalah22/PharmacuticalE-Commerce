@model PharmacuticalE_Commerce.Models.Employee

@{
    ViewBag.Title = "Employees";
    ViewBag.CardTitle = "Delete";
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_StaffManagementLayout.cshtml";
}

<h3>@($"Are you sure you want to delete {Model.Fname} {Model.Lname}?")</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fname)
        </dd>
        <dt class="col-sm-2">
            Last Name :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstDay) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Branch) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Branch.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shift) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shift.FromTime) To @Html.DisplayFor(model => model.Shift.ToTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
