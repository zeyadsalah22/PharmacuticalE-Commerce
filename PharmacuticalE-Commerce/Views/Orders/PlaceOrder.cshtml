 @section Mysection {
    <script>
        $(document).ready(function () {
            getOrder();
        });

        function getOrder() {
            $.ajax({
                url: '/Orders/OrderPartial',
                type: 'GET',
                success: function (result) {
                    $('#order-details').html(result);
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
    </script>

