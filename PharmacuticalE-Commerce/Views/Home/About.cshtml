
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_EcommerceLayout.cshtml";
}

<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">About Us</h1>
					<ol class="breadcrumb">
						<li><a asp-action="Ecommerce" asp-controller="Home">Home</a></li>
						<li class="active">About Us</li>
					</ol>
				</div>
			</div>
