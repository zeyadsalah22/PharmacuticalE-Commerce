@model IEnumerable<Category>
@{
    Layout = "_StaffManagementLayout";
    ViewData["Title"] = "Index";
}
<h2>Categories</h2>

<a asp-action="Create" class="btn btn-primary">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Name")

            </th>
            <th>
                @Html.DisplayName("Parent Category")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                @if (category.ParentCategoryId != null)
                {
                    <td>@category.ParentCategory.Name</td>

                }
                else
                {
                    <td>No Parent Category</td>

                }
                <td>
                    <a asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@category.CategoryId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
