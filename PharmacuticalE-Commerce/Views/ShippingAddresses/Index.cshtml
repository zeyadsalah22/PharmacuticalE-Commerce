@model IEnumerable<PharmacuticalE_Commerce.Models.ShippingAddress>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_EcommerceLayout.cshtml";
}

<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Addresses</h1>
                    <ol class="breadcrumb">
                        <li><a asp-action="Ecommerce" asp-controller="Home">Home</a></li>
                        <li class="active">Addresses</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="user-dashboard page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline dashboard-menu text-center">
                    <li><a asp-action="Dashboard" asp-controller="Orders">Dashboard</a></li>
                    <li><a asp-action="ListOrders" asp-controller="Orders">Orders</a></li>
                    <li><a class="active" asp-action="Index" asp-controller="ShippingAddresses">Address</a></li>
                    <li><a asp-action="Details" asp-controller="UserAuth" asp-route-username="@User.Identity.Name">Profile Details</a></li>
                </ul>
                <div class="dashboard-wrapper user-dashboard">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Address</th>
                                    <th>City</th>
                                    <th>Postal Code</th>
                                    <th class="col-md-2 col-sm-3">Phone</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ZIP)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td>
                                            <form asp-action="Delete">
                                                <input type="hidden" name="id" value="@item.AddressId" />
                                                <button type="submit" class="btn btn-default"><i class="tf-ion-close" aria-hidden="true"></i></button>

                                            </form>
                                            
                                        </td>
                                    </tr>
                                }

                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

