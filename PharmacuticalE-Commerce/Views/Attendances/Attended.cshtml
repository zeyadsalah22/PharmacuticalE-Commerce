@model PharmacuticalE_Commerce.Models.Attendance

@{
    ViewBag.PageTitle = "Attendance";
    Layout = "~/Views/Shared/_StaffManagementLayout.cshtml";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div>
    <div class="col-md-4">
        Employee ID: @ViewBag.EmployeeId
        <br />
        Shift ID: @ViewBag.ShiftId
        <br />
        Branch ID: @ViewBag.BranchId
    </div>
    <br />
    <hr />
    <div class="col-md-4">
        <form asp-action="tAttended" method="post">
            <input type="hidden" name="employeeId" value="@ViewBag.EmployeeId" />
            <input type="hidden" name="shiftId" value="@ViewBag.ShiftId" />
            <input type="hidden" name="branchId" value="@ViewBag.BranchId" />
            <div class="form-group">
                <label asp-for="AttendedAt" class="control-label"></label>
                <input asp-for="AttendedAt" class="form-control" />
                <span asp-validation-for="AttendedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeftAt" class="control-label"></label>
                <input asp-for="LeftAt" class="form-control" />
                <span asp-validation-for="LeftAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
