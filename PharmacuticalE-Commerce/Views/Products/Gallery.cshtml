@model IEnumerable<PharmacuticalE_Commerce.Models.Product>

@{
    ViewData["Title"] = "Gallery";
    Layout = "~/Views/Shared/_EcommerceLayout.cshtml";
}

<h1>Gallery</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@Url.Content("~/images/products/" + item.Photo)" class="card-img-top" width="300" height="300" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-subheading">@item.Category.Name</p>
                    <p class="card-text">Price: @item.Price $</p>
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>