<div id="ProductsListContainer">
</div>

@section Mysection {
    <script>
        $(document).ready(function () {
            loadPage(1);
        });

        function loadPage(page) {
            $.ajax({
                url: '/Products/GetProductsList',
                type: 'GET',
                data: { pageNumber: page },
                success: function (result) {
                    $('#ProductsListContainer').html(result);
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
    </script>
}
