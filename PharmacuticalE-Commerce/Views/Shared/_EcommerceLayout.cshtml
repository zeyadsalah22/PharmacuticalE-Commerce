@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

	<!-- Basic Page Needs
	================================================== -->
	<meta charset="utf-8">
	<title>Pharmacy</title>

	<!-- Mobile Specific Metas
	================================================== -->
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="Construction Html5 Template">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
	<meta name="author" content="Themefisher">
	<meta name="generator" content="Themefisher Constra HTML Template v1.0">

	<!-- theme meta -->
	<meta name="theme-name" content="aviato" />

	<!-- Favicon -->
	<link rel="shortcut icon" type="image/x-icon" href="~/images/pharmacy.png" />

	<!-- Themefisher Icon font -->
	<link rel="stylesheet" href="~/plugins/themefisher-font/style.css">
	<!-- bootstrap.min css -->
	<link rel="stylesheet" href="~/plugins/bootstrap/css/bootstrap.min.css">

	<!-- Animate css -->
	<link rel="stylesheet" href="~/plugins/animate/animate.css">
	<!-- Slick Carousel -->
	<link rel="stylesheet" href="~/plugins/slick/slick.css">
	<link rel="stylesheet" href="~/plugins/slick/slick-theme.css">

	<!-- Main Stylesheet -->
	<link rel="stylesheet" href="~/css/style.css">

</head>

<body id="body">
	<!-- Start Top Header Bar -->
	<section class="top-header">
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-xs-12 col-sm-4">
					<div class="contact-number">
						<i class="tf-ion-ios-telephone"></i>
						<span>0129- 12323-123123</span>
					</div>
				</div>
				<div class="col-md-4 col-xs-12 col-sm-4">
					<!-- Site Logo -->
					<div class="logo text-center">
						<a asp-action="Ecommerce" asp-controller="Home">
							<!-- replace logo here -->
							<img width="250" height="auto" src="~/images/logo.png" />
						</a>
					</div>
				</div>
				<div class="col-md-4 col-xs-12 col-sm-4">
					<!-- Cart -->
					<ul class="top-menu text-right list-inline">
						<li class="dropdown cart-nav dropdown-slide">
							@if (User.Identity.IsAuthenticated)
							{
								<a asp-action="Index" asp-controller="Carts" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
									<i class="tf-ion-android-cart"></i>Cart
								</a>
							}
							<div class="cart_items-nav"></div>
						</li><!-- / Cart -->
						<!-- Search -->
						<li class="dropdown search dropdown-slide">
							<a href="#!" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
								<i class="tf-ion-ios-search-strong"></i> Search
							</a>
							<ul class="dropdown-menu search-dropdown">
								<li>
									<form asp-action="Gallery" asp-controller="Products" method="get">
										<input type="search" class="form-control" name="SearchString" placeholder="Search...">
									</form>
								</li>
							</ul>
						</li><!-- / Search -->
						<!-- Languages -->
						<li class="dropdown cart-nav dropdown-slide">

							@if (User.Identity.IsAuthenticated)
							{
								<a asp-action="Details" asp-controller="UserAuth" asp-route-username="@User.Identity.Name" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
									<i class="tf-ion-android-person"></i>@User.Identity.Name
								</a>
								<div class="dropdown-menu cart-dropdown">
									<div class="media">
										<a asp-action="Details" asp-controller="UserAuth" asp-route-username="@User.Identity.Name">Profile</a>
									</div>
									<div class="media">
										<a asp-action="Logout" asp-controller="UserAuth">Logout</a>
									</div>
								</div>

							}
							else
							{
								<a asp-action="Login" asp-controller="UserAuth" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
									<i class="tf-ion-android-person"></i>@Html.DisplayName("User")
								</a>
								<div class="dropdown-menu cart-dropdown">
									<div class="media">
										<a asp-action="Login" asp-controller="UserAuth">Login</a>
									</div>
									<div class="media">
										<a asp-action="Register" asp-controller="UserAuth">Register</a>
									</div>
								</div>

							}

						</li>

					</ul><!-- / .nav .navbar-nav .navbar-right -->
				</div>
			</div>
		</div>
	</section><!-- End Top Header Bar -->
	<!-- Main Menu Section -->
	<section class="menu">
		<nav class="navbar navigation">
			<div class="container">
				<div class="navbar-header">
					<h2 class="menu-title">Main Menu</h2>
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
							aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>

				</div><!-- / .navbar-header -->
				<!-- Navbar Links -->
				<div id="navbar" class="navbar-collapse collapse text-center">
					<ul class="nav navbar-nav">

						<!-- Home -->
						<li class="dropdown ">
							<a asp-action="Ecommerce" asp-controller="Home">Home</a>
						</li>
						<!-- / Shop -->
						<li class="dropdown dropdown-slide">
							<a asp-action="Gallery" asp-controller="Products" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="350"
							   role="button" aria-haspopup="true" aria-expanded="false">
								Shop <span class="tf-ion-ios-arrow-down"></span>
							</a>
							<div class="dropdown-menu">
								<div class="row shop">
								</div><!-- / .row -->
							</div><!-- / .dropdown-menu -->
						</li><!-- / Shop -->
						<li class="dropdown ">
							<a asp-action="ListOrders" asp-controller="Orders">Orders</a>
						</li>
						<li class="dropdown">
							<a asp-action="About" asp-controller="Home">About Us</a>
						</li>
						<li class="dropdown">
							<a asp-action="FAQ" asp-controller="Home">FAQ</a>
						</li>
						
						
						
					</ul><!-- / .nav .navbar-nav -->

				</div>
				<!--/.navbar-collapse -->
			</div><!-- / .container -->
		</nav>
	</section>
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
	<footer class="footer section text-center">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<ul class="social-media">
						<li>
							<a href="https://www.facebook.com/themefisher">
								<i class="tf-ion-social-facebook"></i>
							</a>
						</li>
						<li>
							<a href="https://www.instagram.com/themefisher">
								<i class="tf-ion-social-instagram"></i>
							</a>
						</li>
						<li>
							<a href="https://www.twitter.com/themefisher">
								<i class="tf-ion-social-twitter"></i>
							</a>
						</li>
						<li>
							<a href="https://www.pinterest.com/themefisher/">
								<i class="tf-ion-social-pinterest"></i>
							</a>
						</li>
					</ul>
					<ul class="footer-menu text-uppercase">
						<li>
							<a asp-action="Gallery" asp-controller="Products">SHOP</a>
						</li>
						<li>
							<a asp-action="About" asp-controller="Home">About Us</a>
						</li>
						<li>
							<a asp-action="FAQ" asp-controller="Home">FAQ</a>
						</li>
					</ul>
					<p class="copyright-text">Copyright &copy;2024, Designed &amp; Developed by PharmaEase Team</p>
				</div>
			</div>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@RenderSection("MySection", required: false))
	<!--
		Essential Scripts
		=====================================-->
	@* <!-- Bootstrap 3.1 -->
	<script src="~/plugins/bootstrap/js/bootstrap.min.js"></script> *@
	<!-- Bootstrap Touchpin -->
	<script src="~/plugins/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js"></script>
	<!-- Instagram Feed Js -->
	<script src="~/plugins/instafeed/instafeed.min.js"></script>
	<!-- Video Lightbox Plugin -->
	<script src="~/plugins/ekko-lightbox/dist/ekko-lightbox.min.js"></script>
	<!-- Count Down Js -->
	<script src="~/plugins/syo-timer/build/jquery.syotimer.min.js"></script>

	<!-- slick Carousel -->
	<script src="~/plugins/slick/slick.min.js"></script>
	<script src="~/plugins/slick/slick-animation.min.js"></script>

	<!-- Google Mapl -->
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCC72vZw-6tGqFyRhhg5CkF2fqfILn2Tsw"></script>
	<script type="text/javascript" src="~/plugins/google-map/gmap.js"></script>

	<!-- Main Js File -->
	<script src="~/js/script.js"></script>
	<script>
		$(document).ready(function () {
			getNav();
			cartNav();
		});

		function getNav() {
			$.ajax({
				url: '/Category/GetCategoriesNav',
				type: 'GET',
				success: function (result) {
					$('.shop').html(result);
				},
				error: function (error) {
					console.log(error);
				}
			});
		}
		function cartNav() {
			$.ajax({
				url: '/Carts/GetPartialCart',
				type: 'GET',
				success: function (result) {
					$('.cart_items-nav').html(result);
				},
				error: function (error) {
					console.log(error);
				}
			});
		}
	</script>
	@await RenderSectionAsync("Scripts", required: false)


</body>
</html>